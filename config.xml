<?xml version='1.0' encoding='utf-8'?>
<widget id="com.getordering.firenslice" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fire N Slice</name>
    <description>
        Fire N Slice - Truganina, Mobile App for online order and exclusive deals.
    </description>
    <author email="info@getordering.com.au" href="https://www.getordering.com.au/">
        Get Ordering
    </author>
    <content src="index.html" />
	<preference name="phonegap-version" value="cli-9.0.0" />
	<plugin name="cordova-plugin-splashscreen" spec="5.0.3" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	
	<icon src="www/resources/img/192.png" density="mdpi" />
	<platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="www/resources/img/36.png" density="ldpi" />
        <icon src="www/resources/img/48.png" density="mdpi" />
        <icon src="www/resources/img/72.png" density="hdpi" />
        <icon src="www/resources/img/96.png" density="xhdpi" />
        <icon src="www/resources/img/144.png" density="xxhdpi" />
        <icon src="www/resources/img/192.png" density="xxxhdpi" />
    </platform>
	
	<platform name="ios">
		<allow-navigation href="*" />
        <icon src="www/resources/ios/icon/Icon-60@2x.png" width="120" height="120"/>
		<icon src="www/resources/ios/icon/Icon-76@2x.png" width="152" height="152"/>
		<icon src="www/resources/ios/icon/Icon-76.png" width="76" height="76"/>
		<icon src="www/resources/ios/icon/Icon-40.png" width="40" height="40"/>
		<icon src="www/resources/ios/icon/Icon-1024.png" width="1024" height="1024"/>
    </platform>
	
	<splash src="www/resources/img/192.png" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="SplashScreenWidth" value="192" /> <!-- defaults to "170" -->
    <preference name="SplashScreenHeight" value="192" /> <!-- defaults to "200" -->
	<preference name="SplashScreenBackgroundColor" value="#000"/>
	<preference name="fullscreen" value="true"/>
</widget>
